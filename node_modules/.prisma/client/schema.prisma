generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model PushupLog {
  id        String   @id @default(uuid())
  count     Int
  date      DateTime @default(now())
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

model UserGoal {
  id        String   @id @default(uuid())
  userId    String   @unique
  dailyGoal Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
